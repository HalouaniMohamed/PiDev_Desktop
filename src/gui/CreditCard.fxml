               </children>
            </VBox>
            <VBox layoutY="53.0" prefHeight="43.0" prefWidth="212.0">
               <children>
                  <Label text="Card information" />
                  <TextField fx:id="tfCardNumber" promptText="1234 1234 1234 1234" />
